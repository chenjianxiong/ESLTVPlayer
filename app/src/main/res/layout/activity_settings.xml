<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- Playback Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playback_settings"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seek_backward_time"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreaseSeekBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvSeekBackValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="5s" />

            <Button
                android:id="@+id/btnIncreaseSeekBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seek_forward_time"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreaseSeekForward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvSeekForwardValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="5s" />

            <Button
                android:id="@+id/btnIncreaseSeekForward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overlay_settings"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_enabled"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOverlayEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

        </LinearLayout>

        <!-- Overlay Position X -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_position_x"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreasePosX"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvPosXValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="600" />

            <Button
                android:id="@+id/btnIncreasePosX"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Position Y -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_position_y"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreasePosY"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvPosYValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="900" />

            <Button
                android:id="@+id/btnIncreasePosY"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Width -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_width"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreaseWidth"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvWidthValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="200" />

            <Button
                android:id="@+id/btnIncreaseWidth"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_height"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreaseHeight"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvHeightValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="100" />

            <Button
                android:id="@+id/btnIncreaseHeight"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Opacity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_opacity"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDecreaseOpacity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

            <TextView
                android:id="@+id/tvOpacityValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:text="100%" />

            <Button
                android:id="@+id/btnIncreaseOpacity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Overlay Color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_color"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCycleColor"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Black"
                android:focusable="true"
                android:background="@drawable/button_background_selector" />

        </LinearLayout>

        <!-- Directory Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Directory Filter"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDirectoryFilter"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter string..."
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@drawable/button_background_selector"
                android:padding="8dp"
                android:focusable="true" />

        </LinearLayout>

        <!-- Display Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/display_settings"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/show_file_size"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchShowFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/show_duration"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchShowDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
